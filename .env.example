# ============================================================================
# AI Provider Configuration
# ============================================================================

# AI Provider Selection
# Options: 'gemini', 'openai', 'anthropic', 'custom'
VITE_AI_PROVIDER=gemini

# AI API Key (use the appropriate key for your provider)
# Gemini: Get from https://makersuite.google.com/app/apikey
# OpenAI: Get from https://platform.openai.com/api-keys
# Anthropic: Get from https://console.anthropic.com/settings/keys
VITE_AI_API_KEY=your_api_key_here

#
# Alternative: Provider-specific keys (fallback if VITE_AI_API_KEY not set)
# VITE_GEMINI_API_KEY=your_gemini_key_here
# VITE_OPENAI_API_KEY=your_openai_key_here
# VITE_ANTHROPIC_API_KEY=your_anthropic_key_here

# Model Selection
# Gemini: gemini-2.5-flash, gemini-2.5-pro, gemini-2.0-flash-exp
# OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo
# Anthropic: claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022
VITE_AI_MODEL=gemini-2.5-flash

# Vision Model (optional override for complex P&ID analysis)
# Legacy architecture used gemini-3-pro-preview for superior reasoning
# If not set, falls back to VITE_AI_MODEL
# VITE_AI_VISION_MODEL=gemini-2.5-pro

# Custom Provider Base URL (for self-hosted or custom endpoints)
# VITE_AI_BASE_URL=https://your-custom-api.com

# AI Generation Parameters (2026 Optimized)
# Official Gemini 2.5 limits: maxOutputTokens up to 65,535 | thinkingBudget up to 24,576
# Note: Vision analysis intentionally omits temperature setting to match legacy behavior
# The model's natural temperature provides better balance for complex P&ID reasoning
VITE_AI_TEMPERATURE=0.2
VITE_AI_MAX_TOKENS=16384  # Optimized: Increased from 4096 to 16384 for complex HVAC analysis

# ============================================================================
# Feature Flags
# ============================================================================

# Semantic Caching (default: true)
VITE_FEATURE_CACHE=true

# File Processing (default: true)
VITE_FEATURE_FILE_PROCESSING=true

# Auto-run Analysis (default: true)
# Set to false to prevent automatic analysis when uploading documents
# VITE_FEATURE_AUTO_ANALYZE=false

# Mock Mode (default: false)
# When enabled, bypasses AI provider and returns static mock data for zero-cost debugging
# IMPORTANT: Only use for frontend development and calibration testing
# MOCK_MODE_ENABLED=false

# Mock Mode Simulated Latency (default: 500ms)
# Adds artificial delay to mock responses for realistic UX testing
# Set to 0 for instant responses
# MOCK_MODE_DELAY_MS=500

# Future Features (default: false)
# VITE_FEATURE_COMPLIANCE=true
# VITE_FEATURE_SAFETY=true
# VITE_FEATURE_PRICING=true

# ============================================================================
# Rate Limiting
# ============================================================================

VITE_RATE_LIMIT_MAX_RETRIES=3
VITE_RATE_LIMIT_DELAY_MS=1000
VITE_RATE_LIMIT_EXPONENTIAL_BACKOFF=true

# ============================================================================
# File Processing
# ============================================================================

VITE_FILE_MAX_SIZE=10485760
VITE_FILE_SUPPORTED_FORMATS=pdf,png,jpg,jpeg,dwg
VITE_FILE_PDF_DPI=300
