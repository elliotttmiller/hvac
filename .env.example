# HVAC Analysis Backend Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
HVAC_HOST=0.0.0.0
HVAC_PORT=8000
HVAC_DEBUG=false

# Ollama Configuration
HVAC_OLLAMA_BASE_URL=http://localhost:11434/v1
HVAC_OLLAMA_API_KEY=ollama
HVAC_MODEL_NAME=qwen2.5vl

# Processing Limits
HVAC_MAX_PAGES_DEFAULT=20
HVAC_MAX_FILE_SIZE_MB=50
# Global timeout in seconds (Default 120s is too short for 20-page local inference)
# 300s = 5 minutes. Essential for GTX 1070.
HVAC_API_TIMEOUT=300

# Inference Parameters
HVAC_EXTRACTION_TEMPERATURE=0.0
HVAC_REASONING_TEMPERATURE=0.1
# Bumped to 2000 to prevent cutting off dense blueprint text
HVAC_EXTRACTION_MAX_TOKENS=2000
HVAC_CONTEXT_WINDOW_MAX_TOKENS=28000

# PDF Rendering
# Zoom factor for PDF to image conversion (1.0-4.0)
# 2.0 = Balanced (Good for GTX 1070 8GB VRAM)
# 3.0 = High Detail (Use only if text is blurry)
HVAC_PDF_ZOOM_FACTOR=2.0

# Retry Configuration
HVAC_MAX_RETRIES=2
HVAC_RETRY_INITIAL_DELAY=2.0
HVAC_RETRY_BACKOFF_FACTOR=2.0

# Paths
HVAC_UPLOAD_DIR=backend/uploads
HVAC_DATA_DIR=backend/data

# CORS (comma-separated list)
HVAC_CORS_ORIGINS=*

# Logging
HVAC_LOG_LEVEL=INFO